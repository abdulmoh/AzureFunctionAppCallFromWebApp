
@if (ViewData["result"] != null || !string.IsNullOrWhiteSpace((string)ViewData["result"]))
{
    <p>
        <strong>@ViewData["result"]</strong>
    </p>
}

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <label for="firstName">Name </label>
            <input type="text" id="name" name="name" placeholder="name" />
            <input type="submit" />
        </form>
    </div>
</div>  